<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/itemImage"
                android:src="@drawable/sua_rua_mat_1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SENKA PERFECT WHIP ACNE CARE"
                    android:textColor="@color/blue"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/item_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sửa rửa mặt dành cho da mụn"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/item_txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="105000 VND"
                    android:textColor="@color/pink"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp"/>

            </LinearLayout>
        </LinearLayout>
        
    </androidx.cardview.widget.CardView>
        

</androidx.constraintlayout.widget.ConstraintLayout>